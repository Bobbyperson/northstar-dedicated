# Maintainer: pg9182 <96569817+pg9182@users.noreply.github.com>
pkgname=northstar
pkgver=1.31.2
pkgver_tf=2.0.11.0
pkgrel=0
pkgdesc="Northstar binaries and mods (with experimental gamemode_fd_experimental mods)"

url="https://northstar.tf"
license="MIT"
arch="x86_64"
makedepends="git"

source="https://github.com/R2Northstar/Northstar/releases/download/v${pkgver}/Northstar.release.v${pkgver}.zip"

prepare() {
    local mods_path="$startdir/NorthstarMods"

    if [ -d "$startdir/.git" ]; then
        git -C "$startdir" submodule update --init --recursive --depth 1 -- NorthstarMods || true
    fi

    if [ ! -d "$mods_path" ]; then
        echo "ERROR: Expected submodule at $mods_path. Make sure you've checked out submodules."
        echo "e.g., git submodule update --init --recursive"
        return 1
    fi
}

check() {
    ls "$srcdir"
    test -f "$srcdir/NorthstarLauncher.exe"
    test -f "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/cfg/autoexec_ns_server.cfg"
    test -d "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/maps/graphs"
    test -d "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/maps/navmesh"
    test -f "$srcdir/bin/x64_dedi/d3d11.dll"
}

package() {
    local mods_src="$startdir/NorthstarMods"
    local dest="$pkgdir/usr/lib/northstar"

    rm -f "$srcdir"/*.zip
    mkdir -p "$dest"
    cp -r "$srcdir/." "$dest/"

    rm -rf "$dest/NorthstarMods"
    rm -rf "$dest/R2Northstar/mods/Northstar.Client" \
           "$dest/R2Northstar/mods/Northstar.Custom" \
           "$dest/R2Northstar/mods/Northstar.CustomServers"

    install -d "$dest/R2Northstar/mods"
    cp -r "$mods_src/Northstar.Client"        "$dest/R2Northstar/mods/"
    cp -r "$mods_src/Northstar.Custom"        "$dest/R2Northstar/mods/"
    cp -r "$mods_src/Northstar.CustomServers" "$dest/R2Northstar/mods/"
}

sha512sums="
f9acd68d031c7cbf4bdc040004a425d1fa9c6a17d441e014caa131eed269783c3c3f46452f12070bf664406fdfe9cb0f12b779bc20db12b2bed927e3f0012f6a  Northstar.release.v$pkgver.zip
"
